<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

    <Appenders>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%-7level %d [%t] %c - %msg%n"/>
        </Console>

        <RollingFile name="FileAppender"
                     fileName="src/test/resources/logs/Application.log"
                     filePattern="src/test/resources/logs/Application-%i.log">
            <PatternLayout
                pattern="%-7level %d [%t] %c - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>
            <DefaultRolloverStrategy max="3"/>
        </RollingFile>

    </Appenders>

    <Loggers>

        <!-- Your custom logger -->
        <Logger name="devpinoyLogger" level="debug" additivity="false">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root logger -->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>

    </Loggers>

</Configuration>
